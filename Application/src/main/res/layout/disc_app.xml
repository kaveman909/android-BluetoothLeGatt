<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/led_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/led_enable" />

    <EditText
        android:id="@+id/led_blink_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/led_blink_rate" />

    <EditText
        android:id="@+id/led_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/led_duration" />

    <Button
        android:id="@+id/speaker_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/speaker_enable" />

    <EditText
        android:id="@+id/speaker_pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/speaker_pitch" />

    <EditText
        android:id="@+id/speaker_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/speaker_volume" />

</LinearLayout>